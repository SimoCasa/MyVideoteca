<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="Nome CD"
            android:textColor="@color/my_secondary"
            android:textSize="24sp"
            app:boxStrokeColor="@android:color/transparent"
            android:background="@null"
            android:enabled="false"
            android:textStyle="bold" />
    
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImage"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">
    
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/my_primary">
    
                <!-- Immagine sfocata che copre i bordi laterali -->
                <ImageView
                    android:id="@+id/cdBlurredImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/login_background"
                    android:alpha="0.2"
                    android:scaleType="centerCrop"/>
    
                <!-- ImageView verticale al centro -->
                <ImageView
                    android:id="@+id/cdImg"
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/login_background"/>
    
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autore:"
            android:textColor="@color/my_secondary"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"/>
    
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:cardElevation="8dp">
    
            <EditText
                android:id="@+id/detailAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:text="name"
                app:boxStrokeColor="@android:color/transparent"
                android:background="@null"
                android:enabled="false"
                android:textSize="16sp" />
    
        </com.google.android.material.card.MaterialCardView>
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durata:"
            android:textColor="@color/my_secondary"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"/>
    
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:cardElevation="8dp">

            <EditText
                android:id="@+id/detailCdDuration"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:text="time"
                app:boxStrokeColor="@android:color/transparent"
                android:background="@null"
                android:enabled="false"
                android:textSize="16sp" />
        </com.google.android.material.card.MaterialCardView>
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casa Discografica:"
            android:textColor="@color/my_secondary"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"/>
    
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:cardElevation="8dp">

            <EditText
                android:id="@+id/detailRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:text="Example"
                app:boxStrokeColor="@android:color/transparent"
                android:background="@null"
                android:enabled="false"
                android:textSize="16sp" />
        </com.google.android.material.card.MaterialCardView>
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Genere:"
            android:textColor="@color/my_secondary"
            android:textSize="18sp"
            android:textStyle="bold" />
    
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:cardElevation="8dp">
    
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="genere"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="16sp"
                app:boxStrokeColor="@android:color/transparent"
                android:background="@null"
                android:enabled="false"
                android:id="@+id/detailGenre"/>
        </com.google.android.material.card.MaterialCardView>
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero Tracce:"
            android:textColor="@color/my_secondary"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"/>
    
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:cardElevation="8dp">
    
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="number"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="16sp"
                app:boxStrokeColor="@android:color/transparent"
                android:background="@null"
                android:enabled="false"
                android:id="@+id/detailTracks"/>
    
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <!-- Bottone Modifica -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/MyRoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Modifica"
                android:textSize="15sp"
                android:layout_marginStart="25dp"
                android:backgroundTint="#D0FFA200"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Bottone Prenota -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBook"
                style="@style/MyRoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Prenota"
                android:layout_marginStart="35dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Bottone Rimuovi -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemove"
                style="@style/MyRoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Elimina"
                android:layout_marginStart="35dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#CEDA1B1B"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <!-- Imposto la scritta se disponibile o meno -->
        <TextView
            android:id="@+id/AvailableState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBook"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:text="disponibilità"
            android:textSize="12sp" />

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>