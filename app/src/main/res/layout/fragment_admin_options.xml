<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_primary"
        android:alpha="0.7"/>

    <!-- Centra la CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:alpha="0.8"
        android:background="?attr/cardBackgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <!-- Contenuto della CardView, come i bottoni -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_brdvd"
            style="@style/MyRoundedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiungi BlueRay/DVD"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" /> <!-- Spazio verticale aggiunto -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_cd"
            style="@style/MyRoundedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiungi CD"
            android:textSize="18sp" />




    </LinearLayout>
</androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
